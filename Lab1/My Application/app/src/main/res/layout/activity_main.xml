<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="4"
            tools:ignore="MissingConstraints"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:padding="5dp"
                tools:ignore="NestedWeights,Suspicious0dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:text="@string/rad"
                    android:textSize="25sp"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="@string/more_info"
                    android:textSize="25sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/equation_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:paddingEnd="20dp"
                    android:text=""
                    android:textSize="80sp"
                    android:textColor="@color/black"
                    tools:ignore="RtlSymmetry" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/result_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:paddingEnd="20dp"
                    android:text=""
                    android:textSize="30sp"
                    android:textColor="#7f848b"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#999"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="6"
            android:orientation="horizontal"
            android:background="#ddd"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_weight="10"
                android:layout_height="match_parent"
                tools:ignore="MissingConstraints,NestedWeights"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    tools:ignore="NestedWeights">

                    <Button
                        android:background="@android:color/transparent"
                        android:textColor="@android:color/black"
                        android:id="@+id/seven"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="@string/_7"
                        android:onClick="buttonClick"
                        android:textSize="30sp"
                        tools:ignore="NestedWeights,UsingOnClickInXml"
                        />

                    <Button
                        android:background="@android:color/transparent"
                        android:textColor="@android:color/black"
                        android:id="@+id/eight"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:onClick="buttonClick"
                        android:text="@string/_8"
                        android:textSize="30sp"

                        tools:ignore="UsingOnClickInXml" />

                    <Button
                        android:background="@android:color/transparent"
                        android:textColor="@android:color/black"
                        android:id="@+id/nine"
                        android:onClick="buttonClick"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="@string/_9"
                        android:textSize="30sp"
                        tools:ignore="UsingOnClickInXml" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >

                    <Button
                        android:background="@android:color/transparent"
                        android:textColor="@android:color/black"
                        android:id="@+id/four"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="@string/_4"
                        android:onClick="buttonClick"
                        android:textSize="30sp"
                        tools:ignore="NestedWeights,UsingOnClickInXml" />

                    <Button
                        android:background="@android:color/transparent"
                        android:textColor="@android:color/black"
                        android:id="@+id/five"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="@string/_5"
                        android:onClick="buttonClick"
                        android:textSize="30sp"

                        tools:ignore="UsingOnClickInXml" />

                    <Button
                        android:background="@android:color/transparent"
                        android:textColor="@android:color/black"
                        android:id="@+id/six"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="@string/_6"
                        android:onClick="buttonClick"
                        android:textSize="30sp"
                        tools:ignore="UsingOnClickInXml" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >

                    <Button
                        android:background="@android:color/transparent"
                        android:textColor="@android:color/black"
                        android:id="@+id/one"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="@string/_1"
                        android:onClick="buttonClick"
                        android:textSize="30sp"
                        tools:ignore="UsingOnClickInXml" />

                    <Button
                        android:background="@android:color/transparent"
                        android:textColor="@android:color/black"
                        android:id="@+id/two"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="@string/_2"
                        android:onClick="buttonClick"
                        android:textSize="30sp"
                        tools:ignore="UsingOnClickInXml" />

                    <Button
                        android:background="@android:color/transparent"
                        android:textColor="@android:color/black"
                        android:id="@+id/three"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="@string/_3"
                        android:onClick="buttonClick"
                        android:textSize="30sp"
                        tools:ignore="UsingOnClickInXml" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >

                    <Button
                        android:background="@android:color/transparent"
                        android:textColor="@android:color/black"
                        android:id="@+id/zero"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="@string/_0"
                        android:onClick="buttonClick"
                        android:textSize="30sp"
                        tools:ignore="NestedWeights,UsingOnClickInXml"
                        />

                    <Button
                        android:background="@android:color/transparent"
                        android:textColor="@android:color/black"
                        android:id="@+id/dot"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:onClick="buttonClick"
                        android:text="@string/dot"
                        android:textSize="30sp"
                        tools:ignore="UsingOnClickInXml" />

                    <Button
                        android:background="@android:color/transparent"
                        android:textColor="@android:color/black"
                        android:id="@+id/equal"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:onClick="setResult"
                        android:text="@string/equal"
                        android:textSize="30sp"
                        tools:ignore="OnClick,UsingOnClickInXml" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#ccc"
                />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_weight="3"
                android:layout_height="match_parent"
                tools:ignore="MissingConstraints"
                android:orientation="vertical"

                >
                <Button
                    android:background="@android:color/transparent"
                    android:textColor="#0000ff"
                    android:id="@+id/erase"
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    tools:ignore="NestedWeights,OnClick,UsingOnClickInXml"
                    android:text="@string/erase"
                    android:onClick="eraseLast"
                    />

                <Button
                    android:background="@android:color/transparent"
                    android:textColor="#0000ff"
                    android:id="@+id/divide"
                    android:onClick="buttonClick"
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:text="@string/divide"
                    android:textSize="35sp"
                    tools:ignore="UsingOnClickInXml" />

                <Button
                    android:background="@android:color/transparent"
                    android:textColor="#0000ff"
                    android:id="@+id/multiply"
                    android:onClick="buttonClick"
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:text="@string/multiply"
                    android:textSize="35sp"
                    tools:ignore="UsingOnClickInXml" />

                <Button
                    android:background="@android:color/transparent"
                    android:textColor="#0000ff"
                    android:id="@+id/minus"
                    android:onClick="buttonClick"
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:text="@string/minus"
                    android:textSize="30sp"
                    tools:ignore="UsingOnClickInXml" />

                <Button
                    android:background="@android:color/transparent"
                    android:textColor="#0000ff"
                    android:id="@+id/plus"
                    android:onClick="buttonClick"
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:text="@string/plus"
                    android:textSize="30sp"
                    tools:ignore="UsingOnClickInXml" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00f"
                >
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/more"
                    android:textColor="#ffffff"
                    android:textSize="25sp"
                    android:background="@android:color/transparent"
                    >

                </androidx.appcompat.widget.AppCompatButton>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>